{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": [
      "dom",
      "esnext"
    ],
    "jsx": "react-native",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": false,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@components/*": [
        "app/components/*"
      ],
      "@features/*": [
        "app/features/*"
      ],
      "@styles/*": [
        "app/styles/*"
      ],
      "@constants/*": [
        "app/constants/*"
      ],
      "@services/*": [
        "app/services/*"
      ],
      "@utils/*": [
        "app/utils/*"
      ],
      "@hooks/*": [
        "app/hooks/*"
      ],
      "@context/*": [
        "app/context/*"
      ]
    },
    "types": [
      "react",
      "react-native"
    ]
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ],
  "extends": "expo/tsconfig.base"
}
