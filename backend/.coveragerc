[run]
branch = True
source =
    backend/src

omit =
    # Tests and helpers
    */tests/*
    */test_*.py
    */conftest.py

    # Generated / migration code
    */migrations/*
    */alembic/*

    # Declarations & scaffolding that aren't business logic
    */__init__.py
    */settings.py
    */config.py

[report]
show_missing = True
