---
# backend/.bandit  (YAML)

# Only scan your backend app code (adjust if needed)
targets:
  - backend

# Donâ€™t descend into third-party / generated / caches
exclude_dirs:
  - backend/.venv
  - backend/tests
  - backend/migrations
  - backend/**/__pycache__
  - backend/**/.mypy_cache
  - backend/**/.pytest_cache
  - backend/**/*.dist-info

# Keep your explicit skip(s)
skips:
  - B101
